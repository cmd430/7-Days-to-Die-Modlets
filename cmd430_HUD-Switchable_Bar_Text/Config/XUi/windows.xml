<configs>
  <!-- Health Bar -->
  <remove xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud'][@side='right']/rect[@stat_type='Health']/sprite[@name='Icon']"/>
  <remove xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud'][@side='right']/rect[@stat_type='Health']/label[@name='TextContent']"/>
  <append xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud'][@side='right']/rect[@stat_type='Health']">
    <rect controller="CharacterFrameWindow" width="171" height="43">
      <rect depth="5" name="searchControls">
        <button depth="5" name="characterButton" style="icon32px, press" pos="24,-22" color="[iconColor]" atlas="{staticonatlas|once}" sprite="{staticon|once}" pivot="center" sound="[paging_click]" selected="true" visible="{showstats}"/>
        <button depth="5" name="statButton" style="icon32px, press" pos="24,-22" color="[iconColor]" atlas="{staticonatlas|once}" sprite="{staticon|once}" pivot="center" sound="[paging_click]" visible="{showcharacter}" />
      </rect>
      <rect visible="{showcharacter}"><!-- Current Value / Max Value -->
        <label depth="6" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{statcurrentwithmax}" height="30"/>
      </rect>
      <rect visible="{showstats}"><!-- Percent -->
        <label depth="6" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{statcurrent}" height="30"/>
      </rect>
      <panel name="header" height="10" depth="1" pos="9999,9999" backgroundspritename="ui_game_panel_header">
        <label depth="0" name="characterName" width="1" height="1" text="" font_size="1"/>
        <label depth="0" name="levelNumber" width="1" height="1" text="" font_size="1"/>
      </panel>
      <rect visible="{showcharacter}" pos="9999,9999" >
        <panel name="previewFrame" depth="0" width="1" on_press="true" on_hover="true" disableautobackground="true" snap="false">
          <rect>
            <texture depth="0" name="playerPreview" material="Materials/Transparent Colored" size="1,1" globalopacity="false"/>
          </rect>
        </panel>
      </rect>
    </rect>
  </append>
  <!-- Stamina Bar -->
  <remove xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud'][@side='right']/rect[@stat_type='Stamina']/sprite[@name='Icon']"/>
  <remove xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud'][@side='right']/rect[@stat_type='Stamina']/label[@name='TextContent']"/>
  <append xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud'][@side='right']/rect[@stat_type='Stamina'][@pos='0,-47']">
    <rect controller="CharacterFrameWindow" width="171" height="43">
      <rect depth="5" name="searchControls">
        <button depth="5" name="characterButton" style="icon32px, press" pos="24,-22" color="[iconColor]" sprite="ui_game_symbol_agility" pivot="center" sound="[paging_click]" selected="true" visible="{showstats}"/>
        <button depth="5" name="statButton" style="icon32px, press" pos="24,-22" color="[iconColor]" sprite="ui_game_symbol_agility" pivot="center" sound="[paging_click]" visible="{showcharacter}" />
      </rect>
      <rect visible="{showcharacter}"><!-- Current Value / Max Value -->
        <label depth="6" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{statcurrentwithmax}" height="30"/>
      </rect>
      <rect visible="{showstats}"><!-- Percent -->
        <label depth="6" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{playerstamina}" height="30" controller="PlayerStatsWindow"/>
      </rect>
      <panel name="header" height="10" depth="1" pos="9999,9999" backgroundspritename="ui_game_panel_header">
        <label depth="0" name="characterName" width="1" height="1" text="" font_size="1"/>
        <label depth="0" name="levelNumber" width="1" height="1" text="" font_size="1"/>
      </panel>
      <rect visible="{showcharacter}" pos="9999,9999" >
        <panel name="previewFrame" depth="0" width="1" on_press="true" on_hover="true" disableautobackground="true" snap="false">
          <rect>
            <texture depth="0" name="playerPreview" material="Materials/Transparent Colored" size="1,1" globalopacity="false"/>
          </rect>
        </panel>
      </rect>
    </rect>
  </append>
  <!-- Food Bar -->
  <remove xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud'][@side='right']/rect[@stat_type='Stamina']/rect[@stat_type='Food']/sprite[@name='Icon']"/>
  <remove xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud'][@side='right']/rect[@stat_type='Stamina']/rect[@stat_type='Food']/label[@name='TextContent']"/>
  <append xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud'][@side='right']/rect[@stat_type='Stamina']/rect[@stat_type='Food']">
    <rect controller="CharacterFrameWindow" width="171" height="43">
      <rect depth="5" name="searchControls">
        <button depth="5" name="characterButton" style="icon32px, press" pos="26,-21" color="[iconColor]" sprite="ui_game_symbol_fork" pivot="center" sound="[paging_click]" selected="true" visible="{showstats}"/>
        <button depth="5" name="statButton" style="icon32px, press" pos="26,-21" color="[iconColor]" sprite="ui_game_symbol_fork" pivot="center" sound="[paging_click]" visible="{showcharacter}" />
      </rect>
      <rect visible="{showcharacter}"><!-- Current Value / Max Value -->
        <label depth="6" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{playermodifiedcurrentfood}/{playerfoodmax}" height="30" controller="PlayerStatsWindow"/>
      </rect>
      <rect visible="{showstats}"><!-- Percent -->
        <label depth="6" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{playermodifiedcurrentfood}" height="30" controller="PlayerStatsWindow"/>
      </rect>
      <panel name="header" height="10" depth="1" pos="9999,9999" backgroundspritename="ui_game_panel_header">
        <label depth="0" name="characterName" width="1" height="1" text="" font_size="1"/>
        <label depth="0" name="levelNumber" width="1" height="1" text="" font_size="1"/>
      </panel>
      <rect visible="{showcharacter}" pos="9999,9999" >
        <panel name="previewFrame" depth="0" width="1" on_press="true" on_hover="true" disableautobackground="true" snap="false">
          <rect>
            <texture depth="0" name="playerPreview" material="Materials/Transparent Colored" size="1,1" globalopacity="false"/>
          </rect>
        </panel>
      </rect>
    </rect>
  </append>
  <!-- Water Bar -->
  <remove xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud'][@side='right']/rect[@stat_type='Stamina']/rect[@stat_type='Water']/sprite[@name='Icon']"/>
  <remove xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud'][@side='right']/rect[@stat_type='Stamina']/rect[@stat_type='Water']/label[@name='TextContent']"/>
  <append xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud'][@side='right']/rect[@stat_type='Stamina']/rect[@stat_type='Water']">
    <rect controller="CharacterFrameWindow" width="171" height="43">
      <rect depth="5" name="searchControls">
        <button depth="5" name="characterButton" style="icon32px, press" pos="20,-21" color="[iconColor]" sprite="ui_game_symbol_water" pivot="center" sound="[paging_click]" selected="true" visible="{showstats}"/>
        <button depth="5" name="statButton" style="icon32px, press" pos="20,-21" color="[iconColor]" sprite="ui_game_symbol_water" pivot="center" sound="[paging_click]" visible="{showcharacter}" />
      </rect>
      <rect visible="{showcharacter}"><!-- Current Value / Max Value -->
        <label depth="6" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{playermodifiedcurrentwater}/{playerwatermax}" height="30" controller="PlayerStatsWindow"/>
      </rect>
      <rect visible="{showstats}"><!-- Percent -->
        <label depth="6" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{playermodifiedcurrentwater}" height="30" controller="PlayerStatsWindow"/>
      </rect>
      <panel name="header" height="10" depth="1" pos="9999,9999" backgroundspritename="ui_game_panel_header">
        <label depth="0" name="characterName" width="1" height="1" text="" font_size="1"/>
        <label depth="0" name="levelNumber" width="1" height="1" text="" font_size="1"/>
      </panel>
      <rect visible="{showcharacter}" pos="9999,9999" >
        <panel name="previewFrame" depth="0" width="1" on_press="true" on_hover="true" disableautobackground="true" snap="false">
          <rect>
            <texture depth="0" name="playerPreview" material="Materials/Transparent Colored" size="1,1" globalopacity="false"/>
          </rect>
        </panel>
      </rect>
    </rect>
  </append>
  <!-- Vehicle Health Bar -->
  <remove xpath="/windows/window[@name='HUDRightStatBars']/rect[@name='hud'][@pos='-177,100']/rect[@stat_type='VehicleHealth']/sprite[@name='Icon']"/>
  <remove xpath="/windows/window[@name='HUDRightStatBars']/rect[@name='hud'][@pos='-177,100']/rect[@stat_type='VehicleHealth']/label[@name='TextContent']"/>
  <append xpath="/windows/window[@name='HUDRightStatBars']/rect[@name='hud'][@pos='-177,100']/rect[@stat_type='VehicleHealth']">
    <rect controller="CharacterFrameWindow" width="171" height="43">
      <rect depth="5" name="searchControls">
        <button depth="5" name="characterButton" style="icon32px, press" pos="145,-21" color="[iconColor]" atlas="{staticonatlas|once}" sprite="{staticon|once}" pivot="center" sound="[paging_click]" selected="true" visible="{showstats}"/>
        <button depth="5" name="statButton" style="icon32px, press" pos="145,-21" color="[iconColor]" atlas="{staticonatlas|once}" sprite="{staticon|once}" pivot="center" sound="[paging_click]" visible="{showcharacter}" />
      </rect>
      <rect visible="{showcharacter}"><!-- Percent -->
        <label depth="6" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{statcurrentwithmax}" height="30" />
      </rect>
      <rect visible="{showstats}"><!-- Current Value -->
        <label depth="6" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{statcurrent}" height="30"/>
      </rect>
      <panel name="header" height="10" depth="1" pos="9999,9999" backgroundspritename="ui_game_panel_header">
        <label depth="0" name="characterName" width="1" height="1" text="" font_size="1"/>
        <label depth="0" name="levelNumber" width="1" height="1" text="" font_size="1"/>
      </panel>
      <rect visible="{showcharacter}" pos="9999,9999" >
        <panel name="previewFrame" depth="0" width="1" on_press="true" on_hover="true" disableautobackground="true" snap="false">
          <rect>
            <texture depth="0" name="playerPreview" material="Materials/Transparent Colored" size="1,1" globalopacity="false"/>
