<configs>
  <remove xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud'][@side='right']/rect[@stat_type='Stealth']"/>
  <remove xpath="/windows/window[@name='windowCompass']/sprite[@sprite='']"/>
  <append xpath="/windows/window[@name='windowCompass']">
    <sprite pos="-110,-20" sprite="" color="255,255,255,255" globalopacitymod="1.8">
      <label depth="2" width="300" height="30" text="{daytitle}: {day|always}" font_size="28" pivot="center" effect="outline" upper_case="true" justify="right"/>
    </sprite>
    <sprite pos="590,-20" sprite="" color="255,255,255,255" globalopacitymod="1.8">
      <label depth="2" width="300" height="30" text="{timetitle}: {time|always}" font_size="28" pivot="center" effect="outline" upper_case="true" justify="left"/>
    </sprite>
    <rect width="300" height="30" pos="40,-50">
      <rect width="50" height="30" pos="50,0" controller="PlayerStatsWindow">
        <sprite depth="2" name="Icon" sprite="ui_game_symbol_temperature" size="22,22" color="[white]" />
        <label depth="2" name="TextContent" pos="22, 0" font_size="22" color="[white]" justify="center" pivot="topleft" text="{playercoretemp}" height="30" effect="outline"/>
      </rect>
      <rect width="50" height="30" pos="132,0" controller="MapStats">
        <sprite depth="2" name="Icon" sprite="ui_game_symbol_climb" size="22,22" color="[white]" />
        <label depth="2" name="TextContent" pos="22, 0" font_size="22" color="[white]" justify="center" pivot="topleft" text="{mapelevation}[-] M" height="30" effect="outline"/>
      </rect>
      <rect width="50" height="30" pos="214,0" controller="MapStats">
        <sprite depth="2" name="Icon" sprite="ui_game_symbol_wind" size="22,22" color="[white]" />
        <label depth="2" name="TextContent" pos="22, 0" font_size="22" color="[white]" justify="center" pivot="topleft" text="{mapwind}[-] MPH" height="30" effect="outline"/>
      </rect>
      <rect width="50" height="30" pos="296,0" controller="HUDStatBar" stat_type="Stealth" visible="true">
        <filledsprite depth="1" name="BarContent" color="0, 0, 0, 0" type="filled" fill="0" />
        <sprite depth="2" name="Icon" atlas="{staticonatlas|once}" sprite="{staticon|once}" color="[white]" size="22,22" foregroundlayer="true"/>
        <label depth="3" name="TextContent" font_size="22" color="[white]" justify="center" pos="14, 0" pivot="topleft" text="{statcurrent}" effect="outline" height="30"/>
      </rect>
    </rect>
  </append>
</configs>
